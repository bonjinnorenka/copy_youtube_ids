{
  "manifest_version": 3,
  "name": "copy_youtube_ids",
  "version": "1.1",
  "description": "YouTubeページでチャンネルID、動画ID、プレイリストIDをコンテキストメニューからコピーします。",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "contextMenus",
    "scripting",
    "activeTab",
    "clipboardWrite"
  ],
  "host_permissions": [
    "https://www.youtube.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  }
}
